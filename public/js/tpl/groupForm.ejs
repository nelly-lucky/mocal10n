<script type="text/x-handlebars-template" id="groupForm">

    <h4><i class="glyphicon glyphicon-<%= (!id)? 'plus-sign' : 'pencil'%>"></i> <%=(!id)? 'Add new': 'Edit' %> group</h4>
    <div>
        <form class="form-inline">

            <div class="form-group">
                <input type="text" class="input-medium form-control" name="name" id="group-name" placeholder="Group name" value="<%=name%>"/>
                <span class="help-block"></span>
            </div>

            <div class="form-group">
                <label class="checkbox">
                    <input type="checkbox" id="is-common-group" <%= is_common ? 'checked="checked"' :'' %> name="is_common">Is Common?
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i> Save changes</button>
            </div>
        </form>
    </div>
</script>