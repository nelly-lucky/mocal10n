<script type="text/template" id="groupsList">
    <div class="page-header">
        <h1>UI for translation editing
            <small>on "MOCA"-projects</small>
        </h1>
    </div>

    <ul class="list-group">
        <li class="dropdown-header">Available next namespaces:</li>
        <% groups.forEach(function(/*GroupModel.defaults*/model){ %>
        <li class="list-group-item" data-id="<%=model.id%>">
            <a href="/#namespaces/<%= model._id %>/en"><%= model.name %></a>
            <a href="javascript:alert('todo download archive')" class="download-link"><i
                        class="glyphicon glyphicon-download"></i> download</a>
            <a class="delete-group-link"><i class="glyphicon glyphicon-remove-sign"></i>Delete</a>
            <span class="label pull-right <%= (model.is_common ? 'label-info' : 'label-default') %>">
                <%= (model.is_common ? 'Common' : 'Game' ) %>
            </span>
        </li>
        <% }) %>
    </ul>

    <div>
        <h4><i class="glyphicon glyphicon-plus-sign"></i> Add new namespace</h4>
        <div>
            <form class="form-inline" ng-class="{'has-error':error}">

                <div class="form-group">
                    <input type="text" class="input-medium form-control" id="ns-name" placeholder="Namespace name"/>
                    <span class="help-block"></span>
                </div>

                <div class="form-group">
                    <label class="checkbox">
                        <input type="checkbox">Is Common?
                    </label>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary"><i class="glyphicon glyphicon-save"></i>Save changes</button>
                </div>
            </form>
        </div>
    </div>

</script>